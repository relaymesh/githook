{
  "name": "githook-worker-example",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare:sdk": "npm --prefix ../../../sdk/typescript/worker install && npm --prefix ../../../sdk/typescript/worker run build",
    "prepare:relaybus": "node scripts/prepare-relaybus.mjs",
    "postinstall": "npm run prepare:sdk && npm run prepare:relaybus",
    "prestart": "npm run prepare:sdk && npm run prepare:relaybus",
    "start": "ts-node --esm index.ts"
  },
  "dependencies": {
    "@relaymesh/githook": "file:../../../sdk/typescript/worker"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  }
}
